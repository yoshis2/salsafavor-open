    "github.vscode-github-actions", // GitHub Actionsのワークフロー管理

    // --- 開発環境 / ローカライズ ---
    "ms-ceintl.vscode-language-pack-ja", // 日本語化パック
    "ms-vscode-remote.remote-containers", // Docker(Dev Containers)環境への接続

    // --- UI / テーマ / アイコン ---
    "github.github-vscode-theme", // GitHub風のカラーテーマ
    "pkief.material-icon-theme", // フォルダやファイルを見やすいアイコンに変更

    // --- 生産性向上 / その他 ---
    "alefragnani.bookmarks", // コード内の特定の行にブックマークを付ける
    "gruntfuggly.todo-tree", // TODOやFIXMEコメントを一覧表示
    "k--kato.intellij-idea-keybindings" // IntelliJ IDEA風のキーバインドにする
