    "mikestead.dotenv", // .envファイルのシンタックスハイライト

    // --- AI 支援 ---
    "github.copilot", // コードの自動生成・補完
    "github.copilot-chat", // エディタ内でのAIチャット
    "saoudrizwan.claude-dev", // Cline (旧Claude Dev): 自律型AIコーディングエージェント

