    "shufo.vscode-blade-formatter", // Bladeテンプレートのコード整形（フォーマッター）
    "onecentlin.laravel-blade", // Bladeテンプレートのシンタックスハイライトと補完
    "xdebug.php-debug", // PHPのデバッグ用

    // --- フロントエンド (React / TypeScript / CSS) ---
