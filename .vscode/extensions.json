    "esbenp.prettier-vscode", // コードの自動整形（フォーマッター）
    "bradlc.vscode-tailwindcss", // Tailwind CSSのクラス名補完
    "dsznajder.es7-react-js-snippets", // React開発用のスニペット集
    "yoavbls.pretty-ts-errors", // TypeScriptのエラーを見やすく表示
